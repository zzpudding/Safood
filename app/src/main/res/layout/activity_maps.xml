<RelativeLayout

        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent">

    <EditText
            android:id="@+id/TF_location"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Elsewhere?"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:id="@+id/B_search"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/TF_location"
            android:onClick="onClick"
            android:text="Search"/>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:context="com.example.priyanka.mapsdemo.MapsActivity"
              android:layout_alignParentStart="true"
              android:layout_alignParentBottom="true"
              android:layout_below="@+id/B_walmart"/>

    <Button
            android:id="@+id/B_walmart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TF_location"
            android:onClick="onClick"
            android:text="WalMart"/>

    <Button
            android:id="@+id/B_Target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TF_location"
            android:layout_toEndOf="@+id/B_walmart"
            android:onClick="onClick"
            android:text="Target"/>

    <Button
            android:id="@+id/B_Kroger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TF_location"
            android:layout_toEndOf="@+id/B_Target"
            android:onClick="onClick"
            android:text="Kroger"/>

    <Button
            android:id="@+id/B_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/B_Kroger"
            android:layout_toEndOf="@+id/B_Kroger"
            android:onClick="onClick"
            android:text="To" />


</RelativeLayout>