<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TagActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:text="@string/add_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" tools:layout_editor_absoluteY="169dp"
        tools:layout_editor_absoluteX="65dp" android:id="@+id/add_recipe_button"/>
    <Button
        android:text="@string/cookbook_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cookbook_button"/>
</LinearLayout>

</android.support.constraint.ConstraintLayout>